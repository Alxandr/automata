{
  "name": "automata",
  "productName": "Automata",
  "version": "0.1.0",
  "description": "Factorio Mod Manager",
  "repository": "https+git://github.com/Alxandr/automata.git",
  "author": "Alxandr",
  "license": "MIT",
  "main": "main/index.js",
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-plugin-react-require": "^3.0.0",
    "babel-plugin-transform-react-jsx": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-electron": "^0.37.8",
    "babel-preset-env": "^1.1.8",
    "babel-register": "^6.22.0",
    "electron": "^1.4.15",
    "electron-builder": "^11.7.0",
    "eslint": "^3.14.1",
    "eslint-plugin-react": "^6.9.0",
    "simple-scripts": "^0.1.1"
  },
  "build": {
    "appId": "me.alxandr.automata",
    "category": "",
    "compression": "store",
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "directories": {
    "app": "./dist/",
    "output": "./release"
  },
  "scripts": {
    "dev": "simple-scripts dev"
  },
  "simpleScripts": {
    "dev": {
      "command": "electron -r babel-register -r babel-polyfill ./app/main",
      "env": {
        "HOT": "1",
        "NODE_ENV": "development"
      }
    }
  }
}
